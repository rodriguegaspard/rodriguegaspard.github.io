---
import { Image } from "astro:assets";
import rosco_logo from '../assets/rosco_logo.png'
import banner from '../assets/banner.png'
import rosco_logo_dark from '../assets/rosco_logo_dark.png'
import banner_dark from '../assets/banner_dark.png'
---
<div>
  <Image id="dark_version" src={rosco_logo_dark} alt="A drawing of a rooster wearing a red fez and sunglasses."/>
  <Image id="light_version" src={rosco_logo} alt="A drawing of a rooster wearing a red fez and sunglasses."/>
  <Image id="dark_version" src={banner_dark} alt="A crude banner where « The Rooster's Nest » is written."/>
  <Image id="light_version" src={banner} alt="A crude banner where « The Rooster's Nest » is written."/>
</div>

<style>
@media (prefers-color-scheme: light) {
  #dark_version {
    display: none;
  }
}

@media (prefers-color-scheme: dark) {
  #light_version {
    display: none;
  }
}
  div {
    display: flex;
    justify-content: center;
  }
</style>

